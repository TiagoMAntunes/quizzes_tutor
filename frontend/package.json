{
  "name": "quizzes-tutor-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "NODE_ENV=production vue-cli-service build --mode production",
    "test:unit": "vue-cli-service test:unit",
    "test:e2e": "vue-cli-service test:e2e",
    "lint": "vue-cli-service lint",
    "build:dev": "NODE_ENV=development vue-cli-service build --mode development",
    "codecov": "codecov",
    "prettier": "prettier --single-quote --write \"**/**/*.{ts,js,css,scss,vue}\"",
    "start": "vue-cli-service serve --fix"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.11.2",
    "axios": "^0.19.2",
    "material-design-icons-iconfont": "^5.0.1",
    "qrcode": "^1.4.4",
    "showdown": "^1.9.1",
    "typeface-roboto": "0.0.75",
    "vue": "^2.6.10",
    "vue-class-component": "^7.2.2",
    "vue-property-decorator": "^8.3.0",
    "vue-qrcode": "^0.3.3",
    "vue-qrcode-reader": "^2.1.1",
    "vue-router": "^3.1.3",
    "vue-underscore": "^0.1.4",
    "vuetify": "^2.2.5",
    "vuetify-datetime-picker": "^2.1.1",
    "vuex": "^3.1.2"
  },
  "devDependencies": {
    "@mdi/font": "^4.8.95",
    "@types/jest": "^24.0.19",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "@vue/cli-plugin-babel": "~4.2.2",
    "@vue/cli-plugin-e2e-cypress": "~4.2.2",
    "@vue/cli-plugin-eslint": "~4.2.2",
    "@vue/cli-plugin-pwa": "~4.2.2",
    "@vue/cli-plugin-router": "~4.2.2",
    "@vue/cli-plugin-typescript": "~4.2.2",
    "@vue/cli-plugin-unit-jest": "~4.2.2",
    "@vue/cli-plugin-vuex": "~4.2.2",
    "@vue/cli-service": "~4.2.2",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^5.0.1",
    "@vue/test-utils": "^1.0.0-beta.31",
    "axios-mock-adapter": "^1.17.0",
    "codecov": "^3.6.1",
    "compression-webpack-plugin": "^3.0.0",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-vue": "^6.1.2",
    "glob-all": "^3.1.0",
    "prettier": "^1.19.1",
    "purgecss-webpack-plugin": "^1.6.0",
    "sass": "^1.25.0",
    "sass-loader": "^8.0.0",
    "terser-webpack-plugin": "^2.2.1",
    "typescript": "~3.7.5",
    "vue-cli-plugin-vuetify": "~2.0.4",
    "vue-template-compiler": "^2.6.10",
    "vuetify-loader": "^1.2.2",
    "webpack-bundle-analyzer": "latest"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier",
      "@vue/typescript"
    ],
    "rules": {
      "no-console": 0,
      "error": "off",
      "no-debugger": 0,
      "quotes": [
        "error",
        "single"
      ]
    },
    "parserOptions": {
      "parser": "@typescript-eslint/parser"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "preset": "@vue/cli-plugin-unit-jest/presets/typescript-and-babel",
    "transformIgnorePatterns": [
      "node_modules/(?!(vue-underscore)/)"
    ]
  },
  "engines": {
    "node": ">=12.14.0",
    "npm": ">=6.13.0"
  },
  "license": "MIT"
}
